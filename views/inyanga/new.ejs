    <% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Add anew Member</h1>
        <div class="col-6 offset-3">
            <form action="/inyanga" method="POST"novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3"> 
                    <label class="form-label" for="name">Name</label>
                    <input class="form-control" type="text" id="name" name ="inyanga[name]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="surname">Surname</label>
                    <input class="form-control" type="text" id="surname" name ="inyanga[surname]"required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <input type="file" name="image" id="" multiple>
               <!--  <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="inyanga[image]">
                </div> -->

                <div class="mb-3">
                    <label class="form-label" for="massege">Message</label>
                    <textarea class="form-control" type="text" id="massege" name="inyanga[massege]"required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
  
                <div class="mb-3">
                    <label class="form-label" for="phone-number">Cell Phone Number</label>
                    <input type="text" class="form-control item" id="phone-number" name="inyanga[contact]" placeholder="000 000 0000"required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <button class="btn btn-success" >Add a person</button>
            </form>
                <a href="/inyanga">All Doctors</a>
        </div>
    </div>