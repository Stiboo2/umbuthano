    <% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Add anew Member</h1>
        <div class="col-6 offset-3">
            <form action="/inyanga" method="POST"novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3"> 
                    <label class="form-label" for="name">Name</label>
                    <input class="form-control" type="text" id="name" name ="inyanga[name]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="surname">Surname</label>
                    <input class="form-control" type="text" id="surname" name ="inyanga[surname]"required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="inyanga[location]"required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="massege">Message</label>
                    <textarea class="form-control" type="text" id="massege" name="inyanga[massege]"required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
  
                <div class="mb-3">
                    <label class="form-label" for="phone-number">Cell Phone Number</label>
                    <input type="text" class="form-control item" id="phone-number" name="inyanga[contact]" placeholder="000 000 0000"required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label for="">Upload Images</label>
                    <div class="form-file custom-file">
                        <input type="file" class="form-file-input" id="image" name="image" multiple>
                        <label class="form-file-label" for="image">
                            <span class="form-file-text custom-file-label">Choose image(s)...</span>
                            <span class="form-file-button">Browse</span>
                        </label>
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success" >Add a Member</button>
                </div>
                </form>
                <a href="/inyanga">All Doctors</a>
        </div>
    </div>