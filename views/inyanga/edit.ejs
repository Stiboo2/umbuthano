<% layout('layouts/boilerplate')%>
<div class="row">
    <h1 class="text-center">Edit a Member</h1>
    <div class="col-6 offset-3">
        <form action="/inyanga/<%=inyanga._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="name">Name</label>
                <input class="form-control" type="text" id="name" name ="inyanga[name]" value="<%=inyanga.name%>">
            </div>
            <div class="mb-3">
                <label class="form-label" for="surname">Surname</label>
                <input class="form-control" type="text" id="surname" name ="inyanga[surname]"value="<%=inyanga.surname%>"required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="massege">Massege</label>
                <textarea class="form-control" type="text" id="massege"
                name="inyanga[massege]"required><%= inyanga.massege%></textarea>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mb-3">
                <label class="form-label" for="phone-number">Cell Phone Number</label>
                <input class="form-control" type="text" id="phone-number" name="inyanga[contact]" value="<%= inyanga.contact%>"required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input class="form-control" type="text" id="location" name="inyanga[location]"
                    value="<%=inyanga.location %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>
            <div class="mb-3">
                <label for="">Add more Image</label>
                <div class="form-file custom-file">
                    <input type="file" class="form-file-input" id="image" name="image" multiple>
                    <label class="form-file-label" for="image">
                        <span class="form-file-text custom-file-label">Choose image(s)...</span>
                        <span class="form-file-button">Browse</span>
                    </label>
                </div>
            </div>
            <div class="mb-3">
                <% inyanga.images.forEach(function(img, i) {  %>
                <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                </div>
                <label for="image-<%=i%>">Delete?</label>
            
            
                <% })%>
            </div>
            <div class="mb-3">
                <button  class="btn btn-info">Save Changes</button>
            </div>
        </form>
        <a href="/inyanga/<%=inyanga._id%>">Back To Izinyanga</a>

    </div>
</div>


